<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../includes/head') %>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/userProfile.css">
    
</head>
<body>
    <!---------------------------------------- HEADER ---------------------------------------->
    <%- include('../includes/header') %>

    <!---------------------------------------- MAIN ---------------------------------------->
    <main>

        <h2 id="title">Perfil de usuario: Â¡Hola <%= user.firstName %>!</h2>

        <section class="boxDetail">

            <figure><img class='imageDetail' src="/<%= user.image%>" alt=""></figure>

            <article class="boxDescription">

                <p class="name"><%= user.firstName %></p>
                <p class="name"><%= user.lastName %></p>
                <p class="price"><%= user.email %></p>
                <p class="description"><%= user.type %></p>
            

                <ul id="adminButtons">
                    <form action="/userEdit/<%= user.id %>?_method=GET" method="get">
                        <li><button href='/userEdit/<%= user.id %>'><i class="fas fa-edit iconAdmin"></i> Editar</button></li>
                    </form>
                    
                    <form action="/userDelete/<%= user.id %>?_method=DELETE" method="post">
                        <li><button type="submit"><i class="fas fa-trash iconAdmin"></i> Borrar</button></li>
                    </form>
                </ul>


            </article>

        </section>

    </main>

    <!---------------------------------------- FOOTER ---------------------------------------->
    <%- include('../includes/footer') %>

</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../includes/head') %>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <!---------------------------------------- HEADER ---------------------------------------->
    <%- include('../includes/header') %>

    <!---------------------------------------- MAIN ---------------------------------------->
    <main>

        <section class="boxFirst">
            <p><a href='/'>Inicio</a> <a href='/products'>/ Productos</a>
                
            </p> 
        </section>

        <section class="generalArticles">
            <% if(list.length > 0){ %>
                <% list.forEach(product => { %>

                <article class="articleMain">
                    <a href='/productDetail/<%= product.id%>'>
                        <% if (product.image) { %>
                            <figure><img class='image' src="/uploads/products/<%= product.image%>" alt=""></figure>
                        <% } else { %>
                            <figure><img class='image' src="/img/products/productDefault.jpg" alt=""></figure>
                        <% } %>
                        <section class="box-article">
                            <p class="price">$<%= product.price %></p>
                            <p class="name"><%= product.name %></p>
                        </section>
                    </a>
                </article>

                <% }) %>
          
        </section>

        <!-- <a id='newProduct' href='/productCreate'><i class="fas fa-plus"></i></a> -->
            
    </main>

    <!---------------------------------------- FOOTER ---------------------------------------->
    <%- include('../includes/footer') %>

</body>
</html>
